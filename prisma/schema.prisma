  @@index([tenantId])
  @@index([agencyId])
  @@index([contractorId])
  @@index([companyId])
  @@index([payrollPartnerId])
  @@index([createdBy])
  @@index([assignedTo])
  @@index([status])
  @@index([workflowStatus])
  @@map("contracts")
}

