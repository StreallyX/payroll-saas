// ====================================================================
// DEEL-LIKE PLATFORM - RBAC v3 SCHEMA
// ====================================================================
// Architecture RBAC professionnelle et dynamique
// - Syst√®me de r√¥les et permissions enti√®rement dynamique
// - Permissions granulaires bas√©es sur resource + action
// - Hi√©rarchie simple des r√¥les via le champ "level"
// - Ownership et contexte pour permissions contextuelles
// - Pas besoin de modifier le sch√©ma pour ajouter des r√¥les
// ====================================================================

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ====================================================================
// CORE RBAC MODELS
// ====================================================================

/// Table Role - R√¥les dynamiques avec hi√©rarchie
/// Exemples: SUPER_ADMIN, ADMIN, CONTRACTOR, CLIENT, AGENCY_OWNER, ACCOUNTANT
model Role {
  id          String   @id @default(cuid())
  tenantId    String
  name        String   // Ex: "SUPER_ADMIN", "CONTRACTOR", "CLIENT"
  displayName String   // Ex: "Super Administrateur", "Freelance"
  description String?  @db.Text
  
  // Hi√©rarchie simple: plus le niveau est √©lev√©, plus les privil√®ges sont importants
  // 0 = utilisateur de base, 100 = super admin
  level       Int      @default(0)
  
  // Configuration
  homePath    String   @default("/dashboard") // Page d'accueil apr√®s login
  color       String?  @default("#3b82f6") // Couleur pour UI
  icon        String?  @default("user") // Ic√¥ne pour UI
  
  // Status
  isActive    Boolean  @default(true)
  isSystem    Boolean  @default(false) // Les r√¥les syst√®me ne peuvent pas √™tre supprim√©s
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tenant          Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  users           User[]
  rolePermissions RolePermission[]

  @@unique([tenantId, name])
  @@index([tenantId])
  @@index([isActive])
  @@index([level])
  @@map("roles")
}

/// Table Permission - Permissions granulaires avec resource + action
/// Exemples: { resource: "contract", action: "create" }
/// Exemples: { resource: "invoice", action: "approve" }
model Permission {
  id          String   @id @default(cuid())
  
  // Structure resource.action
  resource    String   // Ex: "contract", "invoice", "user", "payment"
  action      String   // Ex: "create", "read", "update", "delete", "approve", "export"
  
  // Cl√© unique combin√©e (ex: "contract.create")
  key         String   @unique
  
  // M√©tadonn√©es
  displayName String   // Ex: "Cr√©er un contrat"
  description String?  @db.Text
  category    String?  // Ex: "Gestion", "Finance", "Administration"
  
  // Scope pour permissions contextuelles
  scope       String   @default("global") // "global", "own", "team", "tenant"
  
  // Status
  isActive    Boolean  @default(true)
  isSystem    Boolean  @default(false) // Les permissions syst√®me ne peuvent pas √™tre supprim√©es
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  rolePermissions RolePermission[]

  @@unique([resource, action, scope])
  @@index([resource])
  @@index([action])
  @@index([scope])
  @@index([isActive])
  @@map("permissions")
}

/// Table RolePermission - Relation many-to-many entre Role et Permission
model RolePermission {
  roleId       String
  permissionId String
  
  // Conditions additionnelles (optionnel, pour permissions contextuelles avanc√©es)
  conditions   Json? // Ex: { "maxAmount": 10000, "requiresApproval": true }
  
  createdAt    DateTime @default(now())

  // Relations
  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
  @@map("role_permissions")
}

